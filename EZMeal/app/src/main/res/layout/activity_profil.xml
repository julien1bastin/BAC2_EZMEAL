<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollViewProfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context=".activities.ProfilActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/hint_profil"
            android:textSize="16dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageUser"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/no_picture"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/photoModify"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/hint_modify"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:text="@string/hint_login"
                        android:textColor="@color/colorTextHint"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewUserLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/hint_login"
                            android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="@string/hint_name"
                        android:textColor="@color/colorTextHint"/>

                    <ViewSwitcher
                        android:id="@+id/switcher_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewUserName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/hint_name"
                            android:textColor="@android:color/darker_gray" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/textInputEditTextUserName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:textColor="@android:color/white" />

                    </ViewSwitcher>

                    <ViewSwitcher
                        android:id="@+id/switcher_modify_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/modify_name"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_create_white_18dp"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/confirm_name"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_done_white_18dp" />

                    </ViewSwitcher>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="@string/hint_first_name"
                        android:textColor="@color/colorTextHint"/>
                    <ViewSwitcher
                        android:id="@+id/switcher_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewUserFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/hint_first_name"
                            android:textColor="@android:color/darker_gray" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/textInputEditTextUserFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_first_name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@android:color/white" />
                    </ViewSwitcher>

                    <ViewSwitcher
                        android:id="@+id/switcher_modify_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/modify_first_name"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_create_white_18dp"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/confirm_first_name"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_done_white_18dp" />

                    </ViewSwitcher>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="@string/hint_email"
                        android:textColor="@color/colorTextHint"/>
                    <ViewSwitcher
                        android:id="@+id/switcher_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewUserEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="@string/hint_email"
                            android:textColor="@android:color/darker_gray" />

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textInputEditTextUserEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:hint="@string/hint_email"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@android:color/white" />

                    </ViewSwitcher>

                    <ViewSwitcher
                        android:id="@+id/switcher_modify_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/modify_email"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_create_white_18dp"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/confirm_email"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_done_white_18dp" />

                    </ViewSwitcher>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="@string/hint_password"
                        android:textColor="@color/colorTextHint"/>
                    <ViewSwitcher
                        android:id="@+id/switcher_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewUserPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="@string/hint_password"
                            android:textColor="@android:color/darker_gray" />

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textInputEditTextUserPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:hint="@string/hint_password"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@android:color/white" />
                    </ViewSwitcher>

                    <ViewSwitcher
                        android:id="@+id/switcher_modify_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/modify_password"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_create_white_18dp"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/confirm_password"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_done_white_18dp" />

                    </ViewSwitcher>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="@string/hint_birthday"
                        android:textColor="@color/colorTextHint"/>
                    <ViewSwitcher
                        android:id="@+id/switcher_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewUserBirthday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="@string/hint_birthday"
                            android:textColor="@android:color/darker_gray" />

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textInputEditTextUserBirthday"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:hint="@string/hint_birthday"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@android:color/white" />
                    </ViewSwitcher>

                    <ViewSwitcher
                        android:id="@+id/switcher_modify_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/modify_birthday"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_create_white_18dp"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/confirm_birthday"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_done_white_18dp" />

                    </ViewSwitcher>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="@string/hint_sex"
                        android:textColor="@color/colorTextHint"/>
                    <ViewSwitcher
                        android:id="@+id/switcher_sex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewUserSex"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="@string/hint_sex"
                            android:textColor="@android:color/darker_gray" />

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textInputEditTextUserSex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:hint="@string/hint_sex"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@android:color/white" />
                    </ViewSwitcher>

                    <ViewSwitcher
                        android:id="@+id/switcher_modify_sex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/modify_sex"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_create_white_18dp"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/confirm_sex"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_done_white_18dp" />

                    </ViewSwitcher>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="@string/hint_lang"
                        android:textColor="@color/colorTextHint"/>
                    <ViewSwitcher
                        android:id="@+id/switcher_lang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewUserLang"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="@string/hint_lang"
                            android:textColor="@android:color/darker_gray" />

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/textInputEditTextUserLang"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:hint="@string/hint_lang"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@android:color/white" />
                    </ViewSwitcher>

                    <ViewSwitcher
                        android:id="@+id/switcher_modify_lang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/modify_lang"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_create_white_18dp"/>

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/confirm_lang"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_done_white_18dp" />

                    </ViewSwitcher>

                </LinearLayout>

            </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v4.widget.NestedScrollView>
